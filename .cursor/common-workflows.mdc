// Request rate
{
  "type": "interactive",
  "action": "formfill",
  "reftarget": "textarea[data-testid='query-editor']",
  "targetvalue": "rate(http_requests_total[5m])",
  "content": "Calculate request rate over 5 minutes"
}

// CPU usage
{
  "type": "interactive",
  "action": "formfill",
  "reftarget": "textarea[data-testid='query-editor']",
  "targetvalue": "100 - (avg(rate(node_cpu_seconds_total{mode='idle'}[5m])) * 100)",
  "content": "Calculate CPU usage percentage"
}

// Memory usage
{
  "type": "interactive",
  "action": "formfill",
  "reftarget": "textarea[data-testid='query-editor']",
  "targetvalue": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
  "content": "Calculate memory usage percentage"
}

// Disk usage
{
  "type": "interactive",
  "action": "formfill",
  "reftarget": "textarea[data-testid='query-editor']",
  "targetvalue": "100 - ((node_filesystem_avail_bytes * 100) / node_filesystem_size_bytes)",
  "content": "Calculate disk usage percentage"
}
